<%- include('partials/header') %>

<h2>编辑记事: <%= note.title %></h2>

<% if (typeof error !== 'undefined' && error && error.length > 0) { %>
    <p class="error-message"><%= error %></p>
<% } %>

<form action="/notes/<%= note.id %>?_method=PUT" method="POST" id="note-form" class="note-edit-form">
    <div class="form-group">
        <label for="title">标题:</label>
        <input type="text" id="title" name="title" value="<%= note.title %>" required>
    </div>
    <div class="form-group">
        <label for="editor-container">内容:</label>
        <div id="editor-container" class="quill-editor">
            <%- note.content ? note.content : '<p><br></p>' %>
        </div>
        <input type="hidden" name="content" id="quill-content">
    </div>
     <div class="form-actions">
        <button type="submit" class="btn btn-success">更新记事</button>
        <a href="/notes" class="btn btn-secondary">取消</a>
    </div>
</form>

<%- include('partials/footer') %>
